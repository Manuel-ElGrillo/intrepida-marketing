---
import Advisory from "../../Advisory/Advisory.astro";
import History from "../../History/History.astro";
import Resources from "../../Resources/Resources.astro";
import RRSS from "../../RRSS/RRSS.astro";
import CTA from "../../CTA/CTA.astro";
import IntrepidText from "../../IntrepidText/IntrepidText.astro";
---

<section 
    class="flex justify-between mx-20 my-10 relative"
    style={{
        background: 'rgba(255, 193, 114, 0.7)',
        borderRadius: '16px',
        boxShadow: '0 4px 30px rgba(0, 0, 0, 0.1)',
        backdropFilter: 'blur(11.5px)',
        WebkitBackdropFilter: 'blur(11.5px)',
        border: '1px solid rgba(255, 193, 114, 0.08)'
      }}>

    <div class="p-5 w-[30%]">

        <Advisory />

        <CTA CTAtext="Call To Action" />

        
    </div>

    <IntrepidText intrepidText="No seas tímido y dame click 🙋🏻‍♀️" intrepidStyles="chat chat-end absolute top-[230px] left-[-95px]"/>
    
    <div class="p-5 w-[50%]">
        
        <History />
        
    </div>
    
    <div class="p-5 w-[20%]">
        
        <Resources />

        <RRSS />

    </div>

</section>