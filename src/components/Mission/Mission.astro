---
interface MissionList {
  mission: string;
}

const missionList: MissionList[] = [
  {
    mission: "Aumentar tus ingresos anuales al conectarte con el cliente que busca tus servicios."
  },
  {
    mission: "Optimizar tu presencia online para que logres cerrar más ventas mensuales."
  },
  {
    mission: "Hacerte un referente para que acudan a ti cuando busquen lo que ofreces."
  },
  {
    mission: "Atraer y deleitar a tus clientes en todo su recorrido de compra."
  },
];
---

<div class="card mb-3 w-[80%] lg:w-[50%] mx-10 md:mx-auto bg-white shadow-xl h-fit">
    <div class="card-body">
      <h5 class="card-title text-2xl text-black">Misión Intrépida</h5>
      <ul>
        {
          missionList.map( item => (
            <li class="flex">
              <svg class="flex-shrink-0 w-3.5 h-3.5 text-green dark:text-green mt-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
              </svg>
              <span class="text-black text-xl px-2 mb-3">
                {item.mission}
              </span>
            </li>
          ) )
        }
      </ul>
    </div>
  </div>